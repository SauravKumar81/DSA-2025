class Solution {
    public int[] minBitwiseArray(List<Integer> nums) {
        int n = nums.size();
        int[] result = new int[n];

        for (int i = 0; i < n; i++) {
            int val = nums.get(i);

            // Special case
            if (val == 2) {
                result[i] = -1;
                continue;
            }

            boolean found = false;

            for (int j = 0; j < 32; j++) {
                // if j-th bit is set, skip
                if ((val & (1 << j)) != 0) {
                    continue;
                }

                int prev = j - 1;
                if (prev < 0) continue;

                int x = val ^ (1 << prev);

                if ((x | (x + 1)) == val) {
                    result[i] = x;
                    found = true;
                    break;
                }
            }

            if (!found) {
                result[i] = -1;
            }
        }

        return result;
    }
}
